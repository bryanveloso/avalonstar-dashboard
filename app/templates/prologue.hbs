<div class="overlay__container">
  <div class="overlay overlay--prologue flex">
    <div class="overlay__section flex__item flex flex--column" role="main">
      <div class="element__metadata flex__item">
      {{#with model.broadcast as |broadcast|}}
        <div class="metadata__number">{{broadcast.number}}</div>
        <div class="metadata__status">{{broadcast.status}}</div>
        <div class="metadata__date">{{broadcast.formattedAirDate}}</div>
      {{/with}}
      </div>
      <div class="element__games">
        <ul class="games__list">
        {{#each model.broadcast.games as |game|}}
          <li class="game">
            {{game.name}}
            {{game.platform.name}}
            {{!-- <img src="{{game.imageArt}}"> --}}
          </li>
        {{/each}}
        </ul>
      </div>
    </div>
    <aside class="overlay__section flex__item--noGrow flex flex--column" role="aside">
      {{!-- Insert looper. --}}
    </aside>
    <aside class="overlay__section flex__item--noGrow flex flex--column" role="chat">
      <div class="element__chat flex__item"></div>
    </aside>
  </div>
</div>